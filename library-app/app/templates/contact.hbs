<h1>Contact</h1>
{{#if responseMessage}}
<div class="alert alert-success">{{responseMessage}}</div>
{{else}}
<div class="formgroup formgroup-lg form-horizontal">
    <div class="row">
    {{textarea rows="4" cols="50" autofocus='autofocus' value=messageBody name="messageBody" class="form-control" placeholder="What's your problem, man?" }}
    </div>
    <!-- http://getbootstrap.com/css/#forms-control-validation -->
    <div class="row text-center">
        <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-2 col-lg-3 col-lg-offset-3">
            {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address."}}
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'saveMessage'}}>Request invitation</button>
        </div>
    </div>
</div>
{{/if}}
{{outlet}}